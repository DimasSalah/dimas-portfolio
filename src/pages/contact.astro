---
import Layout from "../layouts/Layout.astro";
import Sidebar from "../components/Sidebar.astro";
import ContactSection from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Contact - Dimas Salahuddin">
  <div class="flex flex-col md:flex-row">
    <Sidebar currentPath="/contact" />

    <main
      class="flex-1 md:ml-64 bg-white dark:bg-[#050505] min-h-screen flex flex-col"
    >
      <div class="flex-1 max-w-4xl mx-auto px-6 py-12 md:py-20 lg:px-16 w-full">
        <h1
          class="text-3xl font-black tracking-tighter uppercase text-black dark:text-white mb-8"
        >
          Get in Touch
        </h1>
        <ContactSection />
      </div>
      <div class="px-6 lg:px-16 pb-8">
        <Footer />
      </div>
    </main>
  </div>
</Layout>
