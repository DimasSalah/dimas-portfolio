---

interface Service {
  icon: string;
  title: string;
  description: string;
  highlights: string[];
}

const services: Service[] = [
  {
    icon: "phone_iphone",
    title: "Flutter Development",
    description:
      "Building high-performance, cross-platform mobile applications for Android and iOS from a single codebase. From MVP to scalable production apps.",
    highlights: [
      "Cross-platform Android & iOS",
      "State management (GetX, BLoC, Provider, Riverpod)",
      "REST API & WebSocket integration",
      "Firebase & push notifications",
    ],
  },
  {
    icon: "design_services",
    title: "UI/UX Design",
    description:
      "Crafting intuitive, user-centered interfaces that balance aesthetics with usability. Pixel-perfect designs that translate seamlessly into code.",
    highlights: [
      "Wireframing & prototyping",
      "Design systems & component libraries",
      "Responsive & adaptive layouts",
      "User flow optimization",
    ],
  },
  {
    icon: "language",
    title: "Web Development",
    description:
      "Developing modern, responsive web applications and landing pages with clean code and optimized performance.",
    highlights: [
      "JS & PHP Frameworks (React, Next.js, Laravel)",
      "Responsive design",
      "SEO optimization",
      "Progressive Web Apps",
    ],
  },
  {
    icon: "dns",
    title: "Backend Development",
    description:
      "Designing and building reliable server-side solutions, APIs, and database architectures that power your applications.",
    highlights: [
      "RESTful API design",
      "Database architecture",
      "Authentication & security",
      "Cloud deployment",
    ],
  },
];
---

<section class="mb-24" id="services">
  <h2 class="section-label">Services</h2>

  <p
    class="text-[14px] leading-relaxed text-slate-600 dark:text-slate-400 mt-6 mb-8 max-w-2xl"
  >
    Backed by a <span class="metric-highlight">small, focused team</span>, I
    offer end-to-end digital product development — from design to deployment —
    ensuring quality at every stage.
  </p>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    {
      services.map((service, index) => (
        <div
          class="service-card group p-5 md:p-6 border border-slate-100 dark:border-slate-800 rounded-sm hover:border-accent/40 transition-all duration-300 hover:shadow-lg hover:shadow-accent/5 bg-white dark:bg-[#0a0a0a]"
          style={`--reveal-delay: ${index * 120}ms;`}
        >
          
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 flex items-center justify-center bg-slate-100 dark:bg-slate-800 rounded-full group-hover:bg-accent/10 transition-colors">
              <span class="material-symbols-outlined text-slate-600 dark:text-slate-400 group-hover:text-accent transition-colors text-xl">
                {service.icon}
              </span>
            </div>
            <h3 class="text-sm font-black text-black dark:text-white uppercase tracking-tight">
              {service.title}
            </h3>
          </div>

          <p class="text-[12px] leading-relaxed text-slate-500 dark:text-slate-400 mb-4">
            {service.description}
          </p>

          <ul class="space-y-1.5">
            {service.highlights.map((item) => (
              <li class="flex items-start gap-2 text-[11px] text-slate-600 dark:text-slate-400">
                <span class="text-accent mt-0.5 text-[8px]">●</span>
                {item}
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</section>

<style>
  .service-card {
    opacity: 0;
    transform: translateY(24px);
    transition:
      opacity 0.6s ease,
      transform 0.6s ease;
    transition-delay: var(--reveal-delay, 0ms);
  }

  .service-card.revealed {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("revealed");
          observer.unobserve(entry.target);
        }
      });
    },
    { threshold: 0.1, rootMargin: "0px 0px -40px 0px" },
  );

  document.querySelectorAll(".service-card").forEach((card) => {
    observer.observe(card);
  });
</script>
