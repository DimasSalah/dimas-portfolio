---

interface Service {
  icon: string;
  title: string;
  description: string;
  highlights: string[];
}

const services: Service[] = [
  {
    icon: "phone_iphone",
    title: "Flutter Development",
    description:
      "High-performance, scalable mobile applications built for Android and iOS from a single codebase. From rapid MVP launches to production-ready platforms, each solution is engineered for performance, stability, and long-term maintainability.",
    highlights: [
      "Cross-platform Android & iOS",
      "Scalable state architecture (GetX, BLoC, Provider, Riverpod)",
      "REST API & WebSocket integration",
      "Firebase ecosystem & push notifications",
    ],
  },
  {
    icon: "design_services",
    title: "UI/UX Design",
    description:
      "Thoughtfully crafted interfaces that balance visual clarity with seamless usability. Every design decision is aligned with user behavior and business goals, ensuring smooth transitions from concept to implementation.",
    highlights: [
      "Wireframing & interactive prototyping",
      "Design systems & reusable components",
      "Responsive & adaptive layouts",
      "User flow & experience optimization",
    ],
  },
  {
    icon: "language",
    title: "Web Development",
    description:
      "Modern, responsive web applications and landing pages designed for speed, scalability, and strong digital presence. Built with clean architecture and performance-first principles.",
    highlights: [
      "React, Next.js & modern web stacks",
      "Responsive & accessible design",
      "SEO-optimized structure",
      "Progressive Web Apps",
    ],
  },
  {
    icon: "dns",
    title: "Backend Development",
    description:
      "Robust backend systems and API architectures that power reliable digital products. Structured for security, efficiency, and scalable growth from day one.",
    highlights: [
      "RESTful API architecture",
      "Database modeling & optimization",
      "Authentication & security layers",
      "Cloud-ready deployment",
    ],
  },
];

---

<section class="mb-24" id="services">
  <h2 class="section-label">Services</h2>

  <p
    class="text-[14px] leading-relaxed text-slate-600 dark:text-slate-400 mt-6 mb-8 max-w-2xl"
  >
    Backed by a <span class="metric-highlight">small, focused team</span>, I
    offer end-to-end digital product development — from design to deployment —
    ensuring quality at every stage.
  </p>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    {
      services.map((service, index) => (
        <div
          class="service-card group p-5 md:p-6 border border-slate-100 dark:border-slate-800 rounded-sm hover:border-accent/40 transition-all duration-300 hover:shadow-lg hover:shadow-accent/5 bg-white dark:bg-[#0a0a0a]"
          style={`--reveal-delay: ${index * 120}ms;`}
        >
          
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 flex items-center justify-center bg-slate-100 dark:bg-slate-800 rounded-full group-hover:bg-accent/10 transition-colors">
              <span class="material-symbols-outlined text-slate-600 dark:text-slate-400 group-hover:text-accent transition-colors text-xl">
                {service.icon}
              </span>
            </div>
            <h3 class="text-sm font-black text-black dark:text-white uppercase tracking-tight">
              {service.title}
            </h3>
          </div>

          <p class="text-[12px] leading-relaxed text-slate-500 dark:text-slate-400 mb-4">
            {service.description}
          </p>

          <ul class="space-y-1.5">
            {service.highlights.map((item) => (
              <li class="flex items-start gap-2 text-[11px] text-slate-600 dark:text-slate-400">
                <span class="text-accent mt-0.5 text-[8px]">●</span>
                {item}
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</section>

<style>
  .service-card {
    opacity: 0;
    transform: translateY(24px);
    transition:
      opacity 0.6s ease,
      transform 0.6s ease;
    transition-delay: var(--reveal-delay, 0ms);
  }

  .service-card.revealed {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("revealed");
          observer.unobserve(entry.target);
        }
      });
    },
    { threshold: 0.1, rootMargin: "0px 0px -40px 0px" },
  );

  document.querySelectorAll(".service-card").forEach((card) => {
    observer.observe(card);
  });
</script>
